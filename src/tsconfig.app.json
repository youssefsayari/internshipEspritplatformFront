{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "outDir": "../out-tsc/app",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es2016",
      "dom"
    ],
    "baseUrl": "./",  // Set baseUrl to root of your project
    "paths": {
      "src/*": ["src/*"]  // Allows absolute imports from the src folder
    }
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
